extends ../layout

block content

  h1 #{title}: #{book.title}

  p #[strong Author: ]
    a(href=book.author.url) #{book.author.name}
  p #[strong Summary:] #{book.summary}
  p #[strong ISBN:] #{book.isbn}
  p #[strong Genre: ]
    each genre, index in book.genres
      a(href=`/catalog/genre/${genre.id}`) #{genre.name}
      if index < book.genres.length - 1
        |,&nbsp;

  hr

  if book_instances.length

    p #[strong Delete the following copies before attempting to delete this Book.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Copies

      each book_copy in book_instances
        hr
        if book_copy.status=='Available'
          p
            span.badge.text-bg-success.text-uppercase #{book_copy.status}
        else if book_copy.status=='Maintenance'
          p
            span.badge.text-bg-danger.text-uppercase #{book_copy.status}
        else
          p
            span.badge.text-bg-warning.text-uppercase #{book_copy.status}
        p #[strong Imprint:] #{book_copy.imprint}
        if book_copy.status!='Available'
          p #[strong Due back:] #{book_copy.due_back_formatted}
        p #[strong Id:] 
          a(href=book_copy.url) #{book_copy.id}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden',name='id', value=book.id )

      button.btn.btn-danger(type='submit') Delete

extends ../layout

block content
  h1(class="my-3 text-3xl md:text-4xl lg:text-5xl mb-5")= title

  if book_list.length
    div(class="overflow-x-auto")
      table(class="table")
        thead(class="text-base lg:text-lg text-primary")
          tr
            th(scope="col") Title
            th(scope="col") Author
            th(scope="col") Genre
            th(scope="col") ISBN
        tbody
          each book in book_list
            tr(class="lg:text-base")
              td
                a(href=book.url class="link link-hover") #{book.title}
              td #{book.author.first_name} #{book.author.family_name}
              td
                | 
                each genre, index in book.genres
                  if index > 0
                    | , 
                  | #{genre.name}
              td #{book.isbn}
  else
    p(class="lead") There are no books.
extends ../layout

block content
  h1 Title: #{book.title}

  p #[strong Author: ]
    a(href=book.author.url) #{book.author.name}
  p #[strong Summary:] #{book.summary}
  p #[strong ISBN:] #{book.isbn}
  p #[strong Genre: ]
    each genre, index in book.genres
      a(href=`/catalog/genre/${genre.id}`) #{genre.name}
      if index < book.genres.length - 1
        |,&nbsp;

  div(style='margin-left:20px;margin-top:20px')
    h2(style='font-size: 1.5rem;') Copies

    each val in book_instances
      hr
      if val.status=='Available'
        p
          span.badge.text-bg-success.text-uppercase #{val.status}
      else if val.status=='Maintenance'
        p
          span.badge.text-bg-danger.text-uppercase #{val.status}
      else
        p
          span.badge.text-bg-warning.text-uppercase #{val.status}
      p #[strong Imprint:] #{val.imprint}
      if val.status!='Available'
        p #[strong Due back:] #{val.due_back}
      p #[strong Id: ]
        a(href=`/catalog/bookinstance/${val.id}`) #{val.id}

    else
      p There are no copies of this book in the library.

  hr
  p
    a.text-danger(href=book.url+'/delete') Delete Book
  p
    a(href=book.url+'/update') Update Book

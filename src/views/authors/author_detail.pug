extends ../layout

block content

  h1(class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl mb-5 text-balance") Author: #{author.name}
  p(class="md:text-lg") Lifespan: #{author.lifespan} 

  div(class="ml-5 mt-5")

    h2(class="text-2xl sm:text-3xl mb-3") Books
    if author_books.length
      dl(class="space-y-3")
        each book in author_books
          dt
            a(href=book.url class="link link-primary link-hover text-lg") #{book.title}
          dd(class="text-balance") #{book.summary}
    else
      p(class="text-lg") This author has no books.

  hr(class="my-6")
  p(class="my-4")
    a(href=author.url+'/delete' class="text-error text-lg link link-hover") Delete author
  p(class="my-2")
    a(href=author.url+'/update' class="text-primary text-lg link link-hover") Update author

extends ../layout

block content

  h1(class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl mb-5 text-balance") #{title}: #{author.name}
  p= author.lifespan

  if author_books.length

    p(class="text-lg mt-4 text-info") #[strong Delete the following books before attempting to delete this author.]
    div(class="ml-5 mt-5 space-y-3")
      h4(class="text-2xl sm:text-3xl mb-3") Books
      dl(class="space-y-3")
        each book in author_books
          dt
            a(href=book.url class="link link-primary link-hover text-lg") #{book.title}
          dd(class="text-balance") #{book.summary}

  else
    p(class="text-xl lg:text-2xl my-6") Do you really want to delete this Author?

    form(method='POST')
      div
        input#authorid(type='hidden', name='authorid', value=author.id )

      button(type='submit' class="btn btn-error uppercase") Delete
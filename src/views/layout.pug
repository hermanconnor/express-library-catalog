doctype html
html(lang='en')
  head 
    title= title 
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='/css/styles.css', rel='stylesheet')
    link(href='/images/favicon.png', rel='icon')
    script(defer src="/js/themeToggle.js") 
  body
    nav(class="navbar bg-base-100 mb-2 lg:mb-0")
        div(class="flex-1 text-center")
          a(href="/catalog" class="btn btn-ghost text-xl text-primary")
            svg(class="d-inline-block" width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
              path(d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25")
            span(class="text-base md:text-lg") Express Library

        div(class="flex-none")
          details(class="dropdown dropdown-end hidden lg:block")
            summary(class="btn btn-ghost m-1") Theme
              svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4")
                path(stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5")

            ul(id="theme-list" class="menu dropdown-content bg-base-100 rounded-box z-[1] w-52 p-2 shadow")
              li(id="light")
                a
                  svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6")
                    path(stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z") 
                  span Light
              li(id="dark")
                a
                  svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6")
                    path(stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z")
                    span Dark
              li(id="system")
                a
                  svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6")
                    path(stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25")
                    span System

          div(class="drawer z-50 lg:hidden")
            input(id="my-drawer" type="checkbox" class="drawer-toggle")
            div(class="drawer-content")
              label(for="my-drawer" class="btn btn-square btn-ghost drawer-button")
                svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6")
                  path(stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5")
          
            div(class="drawer-side")
              label(for="my-drawer" aria-label="close sidebar" class="drawer-overlay") 
              ul(class="menu bg-base-200 text-base-content min-h-full w-80 p-4 space-y-4")
                div
                  h3.text-primary.text-base Menu
                li(class="")
                  a(href='/catalog') Home
                li(class="")
                  a(href='/catalog/books') All books
                li(class="")
                  a(href='/catalog/authors') All authors
                li(class="")
                  a(href='/catalog/genres') All genres
                li(class="")
                  a(href='/catalog/bookinstances') All book-instances
                div(class="divider divider-primary")
                li(class="")
                   a(href='/catalog/author/create') Create new author
                li(class="")
                  a(href='/catalog/genre/create') Create new genre
                li(class="")
                  a(href='/catalog/book/create') Create new book
                li(class="")
                  a(href='/catalog/bookinstance/create') Create new book instance (copy)

    main 
      div(class='max-w-screen-2xl mx-auto')
        div(class="min-h-screen grid grid-cols-1 lg:grid-cols-12 gap-1")
          aside(class="hidden lg:block xl:col-span-2 lg:col-span-3 bg-base-100 text-base-content p-4 min-h-screen")
            nav(class='')
              block sidebar 
                h3 Menu
                ul(class='menu')
                  li(class="")
                    a(href='/catalog') Home
                  li(class="")
                    a(href='/catalog/books') All books
                  li(class="")
                    a(href='/catalog/authors') All authors
                  li(class="")
                    a(href='/catalog/genres') All genres
                  li(class="")
                    a(href='/catalog/bookinstances') All book-instances

                  div(class="divider divider-primary")

                  li(class="")
                    a(href='/catalog/author/create') Create new author
                  li(class="")
                    a(href='/catalog/genre/create') Create new genre
                  li(class="")
                    a(href='/catalog/book/create') Create new book
                  li(class="")
                    a(href='/catalog/bookinstance/create') Create new book instance (copy)

          section(class="xl:col-span-10 lg:col-span-9 min-h-screen")
            div.container.mx-auto.px-3.pb-5
              block content
    
    
    footer(class="p-4 bg-primary text-center text-primary-content")
         p Footer content goes here.
 
      
  

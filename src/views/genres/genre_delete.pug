extends ../layout

block content

  h1(class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl mb-5 text-balance") Delete Genre: #{genre.name}

  if genre_books.length

    p(class='text-lg text-info') #[strong Delete the following books before attempting to delete this genre.]

    section(class="ml-5 mt-5 space-y-3")

      h2(class="text-2xl sm:text-3xl mb-3") Books

      dl(class="space-y-3")
        each book in genre_books
          dt
            a(href=book.url class="link link-primary link-hover text-lg" aria-label=`Go to ${book.title} details`) #{book.title}
          dd(class="text-balance") #{book.summary}

  else
    p(class="text-xl lg:text-2xl my-6") Do you really want to delete this Genre?

    form(method='POST' class="mb-4" role='form', aria-labelledby='delete-genre-form')
      div
        input#id(type='hidden', name='id', value=genre.id aria-hidden="true" )

      button(type='submit', aria-label='Delete this genre' class="btn btn-error uppercase") Delete
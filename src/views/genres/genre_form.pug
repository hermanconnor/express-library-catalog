extends ../layout

block content

  h1(class="text-3xl md:text-4xl lg:text-5xl mb-5") #{title}

  form(method='POST' aria-labelledby='genre-form' class="space-y-8")
    div(class="mb-4")
      label(for='name' class="block mb-1.5") Genre:
      input(type='text', id="name" class="input input-bordered input-primary w-full max-w-2xl" placeholder='Fantasy, Poetry etc.' name='name' required value=(undefined===genre ? '' : genre.name) )
        
    button(type='submit' class="btn btn-primary uppercase") Submit
  
  if errors
    for error in errors
      div(role="alert" class="alert alert-error")
        svg(xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z")
            
        span #{error.message}